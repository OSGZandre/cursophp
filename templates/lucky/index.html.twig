{% extends 'base.html.twig' %}
{% block title %}Hello LuckyController!{% endblock %}
{% block body %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .salvar 
    { 
        text-color: #0000; 
        background-color : #0b7de0ff;
        font-size: 15px;
        border-radius: 8px;
    }
    .salvar:hover 
    {
        background-color : #045eadff;
        cursor: pointer;  
    }
    .usuarios
    {
        background-color: #e1eaebff;
        border-radius: 10px;
        border 10px solid #000000;
    }
    .usuarios:hover
    {
        background-color: #ccd4d4ff;
        cursor: pointer;  
    }


</style>

<div class="example-wrapper">
        <form action="{{ path('app_lucky_save') }}" method="post">
            <div class="mb-3" ><h1>Cadastro de Usuário</h1>
                <label class="form-label">Nome</label>
                <input type="text" class="form-control" name="name" placeholder="Digite seu nome"/> <br />
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Digite seu Email"/> <br />
                <label for="exampleInputEmail1" class="form-label">Número de telefone</label>
                <input class="form-control" type="tel" name="telephoneNumber" placeholder="Digite seu Telefone"/> <br />

                <button class="btn btn-primary" type="submit">Salvar</button>
            </div>
        </form>
        <hr />
        <h1>Usuários Cadastrados</h1>
        <div class="usuarios">
            {% if users|length > 0 %}
                {% for row in users %}
                    <h2>Nome: {{ row.name }}</h2>
                    <h2>Email: {{ row.email }}</h2>
                    <h2>Telefone: {{ row.telephoneNumber }}</h2>
                    <hr />
                {% endfor %}
            {% else %}
                <p>Nenhum usuário.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
