{% extends 'base.html.twig' %}
{% block title %}Hello LuckyController!{% endblock %}
{% block body %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code {padding: 2px 6px; }
</style>

<div class="example-wrapper">
                <h1>Cadastro de Usuário</h1> <br />
                <div class="input-group">
                        <select class="form-select" id="inputGroupSelect04" aria-label="Example select with button addon">
                            <option selected>Selecione o Tipo de Usuário</option>
                            <option value="1" name="userType" >Admin</option>
                            <option value="0" name="userType">Comum</option>
                        </select>
                    <button class="btn btn-outline-primary" type="submit">Selecionar</button>
                </div>
                <hr />
                <h2>Formulário de Cadastro</h2>
        {% if 'userType' != 0 %}
                <form action="{{ path('app_lucky_save') }}" method="post">
                    <div>
                        <label class="form-label">Nome</label>
                        <input type="text" class="form-control" name="name" placeholder="Digite seu nome"/> <br />
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Digite seu Email"/> <br />
                        <label for="exampleInputEmail1" class="form-label">Número de telefone</label>
                        <input class="form-control" type="tel" name="telephoneNumber" placeholder="Digite seu Telefone"/> <br />
                        <button class="btn btn-outline-primary" type="submit">Salvar</button>
                    </div>
                </form>
        {% else %}
                <form action="{{ path('app_lucky_saveAdmin') }}" method="post">
                    <div>
                        <label class="form-label">Nome</label>
                        <input type="text" class="form-control" name="nameAdmin" placeholder="Digite seu nome"/> <br />
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" class="form-control" name="emailAdmin" placeholder="Digite seu Email"/> <br />
                        <label for="exampleInputEmail1" class="form-label">Número de telefone</label>
                        <input class="form-control" type="tel" name="telephoneAdmin" placeholder="Digite seu Telefone"/> <br />
                        <label for="inputPassword5" class="form-label">Password</label>
                            <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock"><br />
                        <button class="btn btn-primary" type="submit">Salvar</button>
                    </div>
                </form>
        {% endif %}
        <hr />
        <h1>Usuários Cadastrados</h1>
        <div class="mb-3" >
            {% if users|length > 0 %}
                {% for row in users %}
                    <div class="card" style="width: 25rem;">
                        <img src="..." class="card-img-top" alt="...">
                        <div class="card-body">
                            <h4 class="card-title">
                                Nome: {{ row.name }}<br />
                                Email: {{ row.email }}<br />
                                Telefone: {{ row.telephoneNumber }}<br />
                            </h4>
                            <a href="{{ path('app_admin') }}" class="btn btn-primary">Lista de Usuários</a>
                        </div>
                    </div>
                    <br />
                {% endfor %}
            {% else %}
                <p>Nenhum usuário.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
