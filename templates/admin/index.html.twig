{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Usuários Cadastrados</h1>
    <div class="card d-flex flex-column mb-3" style="padding: 10px; background-color: #e1eaebff; border-radius: 10px;">
        {% if user|length > 0 %}
            {% for user in user %}
            <div class="card-body">
                <h2>Nome: {{ user.name }}</h2>
                <h2>Email: {{ user.email }}</h2>
                <h2>Telefone: {{ user.telephoneNumber }}</h2>
                <a class="btn btn-primary" href="{{ path('app_admin_edit', {id: user.id}) }}">Editar</a>
            </div>
                <hr />
                <br />
            {% endfor %}
        {% else %}
            <p>Nenhum usuário cadastrado.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
