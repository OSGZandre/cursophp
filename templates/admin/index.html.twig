{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form action= "{{ url('app_admin_edit', {id: user.id}) }}" method="post">
        <h2> Nome: {{ row.name }} </h2>
        <input type="text" name="name" placeholder="Digite o nome"/> <br />
        <h2> Email: {{ row.email }} </h2>
        <input type="email" name="email" placeholder="Digite o Email"/> <br />
        <h2> Telefone: {{ row.telephoneNumber }} </h2>
        <input type="tel" name="telephoneNumber" placeholder="Digite o Telefone"/>  <br />
        <button class="salvar" type="submit">Salvar</button>
    </form>
</div>
{% endblock %}
